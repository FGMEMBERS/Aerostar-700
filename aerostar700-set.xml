<PropertyList >

    <sim>
        <description>Aerostar Super 700</description>
        <author>Syd Adams</author>
        <status>development</status>
        <flight-model>yasim</flight-model>
        <aero>aerostar-yasim</aero>
        <fuel-fraction>0.5</fuel-fraction>
        <model>
            <path>Aircraft/Aerostar-700/Models/aerostar.xml</path>
            <start-idling type="bool">0</start-idling>
            <variant type="int">3</variant><!-- change this to start with the following textures-->
        </model>
        <startup>
            <splash-texture>Aircraft/Aerostar-700/splash.rgb</splash-texture>
        </startup>

        <systems>
            <electrical>
                <path></path>
            </electrical>
            <autopilot>
                <path>Aircraft/Aerostar-700/aerostar-autopilot.xml</path>
            </autopilot>
        </systems>

        <instrumentation>
            <path>Aircraft/Aerostar-700/instrumentation.xml</path>
        </instrumentation>

        <sound>
            <path>Aircraft/Aerostar-700/aerostar-sound.xml</path>
        </sound>

        <hud>
            <enable3d>false</enable3d>
        </hud>

        <chase-distance-m>-20</chase-distance-m>

        <view n="0">
            <name>Cockpit</name>
            <type>lookfrom</type>
            <internal type="bool">true</internal>
            <config>
                <x-offset-m type="double">-0.30</x-offset-m>
                <y-offset-m type="double">0.6</y-offset-m>
                <z-offset-m type="double">-0.28</z-offset-m>
                <pitch-offset-deg>-15</pitch-offset-deg>
            </config>
        </view>

    <input>
            <selected>
                <engine n="0">true</engine>
                <engine n="1">true</engine>
            </selected>
        </input>

        <turbulence-effect type = "bool">true</turbulence-effect>
        <allow-toggle-cockpit>true</allow-toggle-cockpit>

        <flaps>
            <setting>0.00</setting> <!-- UP -->
            <setting>0.25</setting> <!-- 10 -->
            <setting>0.50</setting> <!-- 20 -->
            <setting>0.75</setting> <!-- 30 -->
            <setting>1.0</setting> <!-- FULL -->
        </flaps>

        <weight n="0">
            <name>Crew</name>
            <weight-lb>180</weight-lb> 
            <max-lb>400</max-lb>
            <min-lb>180</min-lb>
        </weight>

        <weight n="1">
            <name>Pax/Baggage</name>
            <weight-lb>800</weight-lb>
            <max-lb>1700</max-lb>
            <min-lb>0</min-lb>
        </weight>

        <yokes-visible type="bool">1</yokes-visible>

        <help>
            <title>Aerostar Super 700</title>
        </help>

    <menubar>
        <default>
            <menu n="10">
                <label>Aerostar-700</label>
                <enabled type="bool">true</enabled>
                <item>
                    <label>Autostart</label>
                    <binding>
                        <command>property-toggle</command>
                        <property>sim/model/start-idling</property>
                    </binding>
                </item>
                <item>
                    <label>Yokes On/Off</label>
                    <binding>
                        <command>property-toggle</command>
                        <property>sim/yokes-visible</property>
                    </binding>
                </item>
                <item>
                    <label>Select Livery</label>
                    <binding>
                        <command>nasal</command>
                        <script>aircraft.livery.dialog.toggle()</script>
                    </binding>
                </item>
            </menu>
        </default>
    </menubar>

    </sim>

    <controls>
        <electric>
            <external-power>0</external-power>
            <battery-switch>0</battery-switch>
            <engine n="0">
                <generator>0</generator>
            </engine>
            <engine n="1">
                <generator>0</generator>
            </engine>
        </electric>
        <gear>
            <brake-parking>1.0</brake-parking>
            <gear-down>true</gear-down>
        </gear>
        <lighting>
            <instruments-norm>0.8</instruments-norm>
            <landing-lights type="bool">0</landing-lights>
            <beacon type="bool">0</beacon>
            <strobe type="bool">0</strobe>
            <nav-lights type="bool">0</nav-lights>
            <cabin-lights type="bool">0</cabin-lights>
            <wing-lights type="bool">0</wing-lights>
            <taxi-light type="bool">0</taxi-light>
            <instrument-lights type="bool">0</instrument-lights>
        </lighting>
        <anti-ice>
            <prop-heat>0</prop-heat>
            <pitot-heat>0</pitot-heat>
        </anti-ice>
        <cabin>
            <fan type="bool">0</fan>
            <heat type="bool">0</heat>
        </cabin>
        <engines>
            <engine n="0">
                <magnetos>0</magnetos>
            </engine>
            <engine n="1">
                <magnetos>0</magnetos>
            </engine>
        </engines>
    </controls>

    <consumables>
        <fuel>
            <tank n="0"><!-- Max 62 US gallons-->
                <level-gal_us archive="y">50</level-gal_us>
            </tank>
            <tank n="1"><!-- Max 62 US gallons-->
                <level-gal_us archive="y">50</level-gal_us>
            </tank>
            <tank n="2"><!-- Max 41.5 US gallons-->
                <level-gal_us archive="y">40</level-gal_us>
            </tank>
        </fuel>
    </consumables>

    <autopilot>
        <locks>
            <passive-mode type="bool">true</passive-mode>
        </locks>
    </autopilot>

    <gear>
        <gear n="0">
            <position-norm>1</position-norm>
        </gear>
        <gear n="1">
            <position-norm>1</position-norm>
        </gear>
        <gear n="2">
            <position-norm>1</position-norm>
        </gear>
    </gear>

        <engines>
            <engine n="0">
                <running>0</running>
            </engine>
            <engine n="1">
                <running>0</running>
            </engine>
        </engines>

    <instrumentation>
        <radar>
            <serviceable type="bool" archive="y">true</serviceable>
            <switch type="string" archive="y">off</switch>
            <mode-control type="int" archive="y">3</mode-control>
            <range type="int" archive="y">20</range>
            <mode type="string"	archive="y">WX</mode>
            <heading-marker type="bool"	archive="y">false</heading-marker>
            <lightning type="bool" archive="y">false</lightning>
            <display-mode type="string">arc</display-mode>
            <radar-texture-path type="string" archive="y">Aircraft/Instruments-3d/RDR-160/od_wxradar.rgb</radar-texture-path>
            <echo-texture-path type="string" archive="y">Aircraft/Instruments/Textures/wxecho.rgb</echo-texture-path>
            <display-controls>
                <WX type="bool" archive="y">false</WX>
                <data type="bool" archive="y">false</data>
                <pos type="bool" archive="y">true</pos>
            </display-controls>
        </radar>
        <inst-vertical-speed-indicator>
            <serviceable>true</serviceable>
        </inst-vertical-speed-indicator>
    </instrumentation>

    <nasal>
        <Aerostar-700>
            <file>Aircraft/Aerostar-700/Nasal/systems.nas</file>
            <file>Aircraft/Aerostar-700/Nasal/Electrical.nas</file>
            <file>Aircraft/Instruments-3d/kfc200/kfc-200.nas</file>
            <file>Aircraft/Instruments-3d/kns80/KNS80.nas</file>
            <file>Aircraft/Instruments-3d/ky196/KY196.nas</file>
            <file>Aircraft/Instruments-3d/RDR-160/RDR160.nas</file>
        </Aerostar-700>
    </nasal>

</PropertyList>