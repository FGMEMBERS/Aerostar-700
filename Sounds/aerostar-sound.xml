<!-- Radio -->

   <radio>
      <name>sound-radio-inside</name>
      <mode>looped</mode>
      <path>Aircraft/Aerostar-700/Sounds/radio-5s.wav</path>
        <condition>
            <and>
                <equals>
                    <property>instrumentation/comm/serviceable</property>
                    <value>true</value>
                </equals>
                <greater-than>
                    <property>systems/electrical/outputs/comm[0]</property>
                    <value>1</value>
                </greater-than>
          <property>instrumentation/comm/ptt</property>
          <value>0</value>
            </and>
        </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </radio>


    <!-- Cabin Door -->

        <doors>
            <name>lfdoor-handle</name>
            <mode>once</mode>
            <path>Aircraft/Aerostar-700/Sounds/door_handle.wav</path>
            <condition>
                <greater-than>
                  <property>/controls/cabin-door/handle2/position-norm</property>
                  <value>0.1</value>
                </greater-than>
								<less-than>
