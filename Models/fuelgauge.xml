<?xml version="1.0"?>
<PropertyList>

	<path>fuelgauge.ac</path>

	<animation>
  		<type>material</type>
  		<object-name>FuelGauge.face</object-name>
		<object-name>LHfuel.needle</object-name>
    	<object-name>CTRfuel.needle</object-name>
    	<object-name>RHfuel.needle</object-name>
    	<condition>
    		<greater-than>
    			<property>/systems/electrical/outputs/instrument-lights</property>
    			<value>1</value>
    		</greater-than>
    	</condition>
  		<emission>
    		<red>0.8</red>
    		<green>0.4</green>
    		<blue>0.2</blue>
    		<factor-prop>/controls/lighting/instruments-norm</factor-prop>
  		</emission>
	</animation>
	
	<animation>
  		<type>material</type>
  		<object-name>FuelGauge.face</object-name>
		<object-name>LHfuel.needle</object-name>
    	<object-name>CTRfuel.needle</object-name>
    	<object-name>RHfuel.needle</object-name>
    	<condition>
    		<less-than>
    			<property>/systems/electrical/outputs/instrument-lights</property>
    			<value>1</value>
    		</less-than>
    	</condition>
    	<emission>
    		<red>0.0</red>
    		<green>0.0</green>
    		<blue>0.0</blue>
    		<factor-prop>/controls/lighting/instruments-norm</factor-prop>
    	</emission>
	</animation>
	
	<animation>
  		<type>rotate</type>
  		<object-name>LHfuel.needle</object-name>
  		<property>consumables/fuel/tank[0]/level-gal_us</property>
  		<interpolation>
    		<entry><ind>0</ind><dep>0</dep></entry>
    		<entry><ind>30</ind><dep>47.5</dep></entry>
    		<entry><ind>62</ind><dep>98</dep></entry>
  		</interpolation>
  		<center>
    		<x-m>0</x-m>
    		<y-m>-0.014</y-m>
    		<z-m>0.001</z-m>
  		</center>
 		<axis>
    		<x>-1.0</x>
    		<y>0.0</y>
    		<z>0.0</z>
  		</axis>
	</animation>

	<animation>
  		<type>rotate</type>
  		<object-name>CTRfuel.needle</object-name>
  		<property>consumables/fuel/tank[2]/level-gal_us</property>
  		<interpolation>
    		<entry><ind>0</ind><dep>0</dep></entry>
    		<entry><ind>41.5</ind><dep>82</dep></entry>
    	</interpolation>
  		<center>
    		<x-m>0</x-m>
    		<y-m>0.007</y-m>
    		<z-m>0.001</z-m>
  		</center>
  		<axis>
    		<x>-1.0</x>
    		<y>0.0</y>
    		<z>0.0</z>
  		</axis>
	</animation>

	<animation>
  		<type>rotate</type>
  		<object-name>RHfuel.needle</object-name>
  		<property>consumables/fuel/tank[1]/level-gal_us</property>
  		<interpolation>
    		<entry><ind>0</ind><dep>0</dep></entry>
    		<entry><ind>30</ind><dep>47.5</dep></entry>
    		<entry><ind>62</ind><dep>98</dep></entry>
  		</interpolation>
  		<center>
    		<x-m>0</x-m>
    		<y-m>0.028</y-m>
    		<z-m>0.001</z-m>
  		</center>
  		<axis>
    		<x>-1.0</x>
    		<y>0.0</y>
    		<z>0.0</z>
  		</axis>
	</animation>

</PropertyList>