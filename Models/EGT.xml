<?xml version="1.0"?>
<PropertyList>

	<path>EGTGauge.ac</path>

	<animation>
  		<type>material</type>
  		<object-name>EGT.face</object-name>
		<object-name>EGT.RHneedle</object-name>
    	<object-name>EGT.LHneedle</object-name>
    	<emission>
    		<red>0.8</red>
    		<green>0.4</green>
    		<blue>0.2</blue>
    		<factor-prop>/controls/lighting/instruments-norm</factor-prop>
  		</emission>
	</animation>

	<animation>
  		<type>rotate</type>
  		<object-name>EGT.LHneedle</object-name>
  		<property>engines/engine/egt-degf</property>
  		<interpolation>
    		<entry><ind>0</ind><dep>0</dep></entry>
    		<entry><ind>100</ind><dep>25</dep></entry>
    		<entry><ind>180</ind><dep>100</dep></entry>
  		</interpolation>
  		<center>
    		<x-m>0</x-m>
    		<y-m>-0.026</y-m>
    		<z-m>0.0</z-m>
  		</center>
 		<axis>
    		<x>-1.0</x>
    		<y>0.0</y>
    		<z>0.0</z>
  		</axis>
	</animation>
	
	<animation>
  		<type>rotate</type>
  		<object-name>EGT.RHneedle</object-name>
  		<property>engines/engine[1]/egt-degf</property>
  		<interpolation>
    		<entry><ind>0</ind><dep>0</dep></entry>
    		<entry><ind>100</ind><dep>25</dep></entry>
    		<entry><ind>180</ind><dep>100</dep></entry>
  		</interpolation>
  		<center>
    		<x-m>0</x-m>
    		<y-m>0.026</y-m>
    		<z-m>0.0</z-m>
  		</center>
 		<axis>
    		<x>1.0</x>
    		<y>0.0</y>
    		<z>0.0</z>
  		</axis>
	</animation>

</PropertyList>