<PropertyList>

    <path>VsDsp.ac</path>
	
     <animation>
        <type>material</type>
        <object-name>box</object-name>
		
        <object-name>rect</object-name>
        <emission>
            <red>0.8</red>
            <green>0.4</green>
            <blue>0.2</blue>
            <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
        </emission>
    </animation>
    



    <animation>
        <type>select</type>
		<object-name>vs1000</object-name>
        <object-name>vs100</object-name>
        <object-name>vs10</object-name>
        <object-name>vs1</object-name>
        <object-name>min</object-name> 
		<object-name>minpitch</object-name>
		<object-name>pitch1</object-name>
		<object-name>pitch01</object-name>
		<object-name>pitch001</object-name>
        <condition>		
            <greater-than>
                <property>systems/electrical/batt-volts</property>
                <value>1</value>
            </greater-than>
        </condition>
    </animation>

	<!--   Pitch Display   -->	
	<animation>
        <type>select</type>
        <object-name>minpitch</object-name>
        <condition>           
            <less-than>
                <property>autopilot/settings/target-pitch-deg</property>
                <value>0</value>
            </less-than>         
        </condition>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>pitch1</object-name>
        <property>autopilot/settings/ptaxxx</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>pitch01</object-name>
        <property>autopilot/settings/ptaxxx</property>
        <factor>1</factor>
        <step>0.1</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>pitch001</object-name>
        <property>autopilot/settings/ptaxxx</property>
        <factor>10</factor>
        <step>0.01</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
	
