<PropertyList>

 <path>fuel-pump.ac</path>

  <animation>
    <type>material</type>
	<object-name>switch</object-name>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>switch</object-name>
	<action>
		<button>0</button>
      	<binding>
        	<command>property-toggle</command>
        	<property>/controls/fuel/tank/boost-pump</property>
     	</binding>
     	<binding>
         	<command>property-toggle</command>
          	<property>sim/model/sound/click</property>
      	</binding>
	</action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>fuel-pump-switch</tooltip-id>
                <label>L-Fuel pump: %s</label>
                <mapping>on-off</mapping>
                <property>/controls/fuel/tank/boost-pump</property>
            </binding>
        </hovered>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>switch</object-name>
        <property>/controls/fuel/tank/boost-pump</property>
    <factor> 35 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

